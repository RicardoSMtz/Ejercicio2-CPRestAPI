<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.DetallePersonajeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Imagen centrada -->
            <ImageView
                android:id="@+id/ivImageDetail"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                tools:src="@mipmap/ic_launcher" />

            <!-- Datos -->
            <TextView
                android:id="@+id/tvNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="Nombre: Goku" />

            <TextView
                android:id="@+id/tvKi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="Ki: 9000" />

            <TextView
                android:id="@+id/tvMaxKi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="Ki Máximo: 15000" />

            <TextView
                android:id="@+id/tvRace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="Raza: Saiyajin" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="Género: Masculino" />

            <TextView
                android:id="@+id/tvAffiliationDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="Afiliación: Guerreros Z" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvLongDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="42sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                tools:text="Descripción larga del personaje..." />

            <!-- Título Transformaciones -->
            <TextView
                android:id="@+id/trans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transformaciones"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- RecyclerView más compacto -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransformaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="32dp" />
        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar centrado -->
    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/loading_anim"
        android:indeterminateDuration="600" />
</FrameLayout>


